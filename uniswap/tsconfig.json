{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "strict": true,
    "esModuleInterop": true,
    "allowJs": true,
    "moduleResolution": "bundler",
    "declaration": true,
    "composite": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "useUnknownInCatchVariables": true,
    "typeRoots": [
      "node_modules/@typechain",
      "node_modules/@types"
    ]
  },
  "buildOptions": {
  },
  "include": [
    "./scripts/*.ts",
    "test/*.ts",
    "typechain-types/*.ts",
    "typechain-types/**/*.ts"
  ],
  "files": [
    "hardhat.config.ts"
  ]
}